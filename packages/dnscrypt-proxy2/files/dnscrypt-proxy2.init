START=95
STOP=15

CONFIG=dnscrypt_proxy2

start() {
	/usr/bin/dnscrypt_proxy2 -c /etc/dnscrypt_proxy2/dnscrypt-proxy.toml
}

stop() {
	killall -9 dnscrypt_proxy2
}

restart() {
	stop
	start
}
